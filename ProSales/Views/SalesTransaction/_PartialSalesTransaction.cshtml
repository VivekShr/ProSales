@model IEnumerable<ProSales.ViewModel.SalesTransactionViewModel>
<table class="table table-striped">
    <thead>
        <th>
            Customer Name
        </th>
        <th>
            Product Name
        </th>
        <th>
            Rate
        </th>
        <th>
            Quantity
        </th>
        <th>
            Total
        </th>
        <th>
            Sales Date
        </th>
        <th>
            Invoice
        </th>
        <th>Action</th>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>

                @Html.DisplayFor(modelItem => item.Total)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalesDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InvoiceNumber)
            </td>
            <td>
                @if (string.IsNullOrEmpty(item.InvoiceNumber))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.SalesTransactionId })
                }
                
            </td>
        </tr>
    }
</table>