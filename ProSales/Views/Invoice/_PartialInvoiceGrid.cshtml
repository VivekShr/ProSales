@model List<ProSales.ViewModel.InvoiceViewModel>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Customer
            </th>
            <th>
                Invoice Date
            </th>
            <th>
                Invoice Number
            </th>
            <th>
                Invoice Total
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count <= 0)
        {
            <tr>
                <td colspan="4" class="cursorDefault">
                    Sorry, No records to show!
                </td>

            </tr>
        }
        else
        {
            foreach (var invoice in Model)
            {
                <tr>
                    <td>
                        @invoice.CustomerName
                    </td>
                    <td>
                        @invoice.InvoiceDate
                    </td>
                    <td>
                        @invoice.InvoiceNumber
                    </td>
                    <td>
                        @invoice.InvoiceTotal
                    </td>
                    <td>
                            @Html.ActionLink("Detail", "Detail", new { id = invoice.InvoiceId })

                    </td>
                </tr>
            }
        }

    </tbody>
</table>

